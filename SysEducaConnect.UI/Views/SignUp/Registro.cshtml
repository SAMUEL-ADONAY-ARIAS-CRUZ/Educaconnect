

<head>
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/SingUp.css">
</head>
@{
    Layout = null;
}
<!-- Login 8 - Bootstrap Brain Component -->
<section class="bg-light p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xxl-11">
                <div class="card border-light-subtle shadow-sm">
                    <div class="row g-0">
                        <div class="col-12 col-md-6">
                            <img class="img-fluid rounded-start w-100 h-100 object-fit-cover" loading="lazy" src="https://assets-global.website-files.com/5e3ce2ec7f6e53c045fe7cfa/603dd1fa9d5394d9ea56366f_Frame-8.png" alt="Welcome back you've been missed!">
                        </div>
                        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                            <div class="col-12 col-lg-11 col-xl-10">
                                <div class="card-body p-3 p-md-4 p-xl-5">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="mb-5">
                                                <div class="text-center mb-4">
                                                    <a href="#!">
                                                        <img class="portada" src="/Imagenes/Sign-Up/logo-login.png" alt="BootstrapBrain Logo" width="100" height="100">
                                                    </a>
                                                </div>
                                                <div class="registro">
                                                    <form asp-action="Registro" class="form">
                                                        <p class="title">Register </p>
                                                        <p class="message">Signup now and get full access to our app. </p>
                                                        <div class="flex">
                                                            <label>
                                                                <input class="input" type="text" name="Nombre" placeholder="" required="">
                                                                <span>Nombre</span>
                                                            </label>

                                                            <label>
                                                                <input class="input" type="text" name="Apellido" placeholder="" required="">
                                                                <span>Apellido</span>
                                                            </label>
                                                        </div>

                                                        <label>
                                                            <input class="input" type="email" name="Correo" placeholder="" required="">
                                                            <span>Correo</span>
                                                        </label>

                                                        <label>
                                                            <input class="input" type="password" name="Contraseña" placeholder="" required="">
                                                            <span>Contraseña</span>
                                                        </label>
                                                        <label>
                                                            <input class="input" type="password" name="ConfirmarContraseña" placeholder="" required="">
                                                            <span>Confirmar Contraseña</span>
                                                        </label>
                                                        <buttom href="@Url.Action("PaginaInicio", "HomePage")" target="_blank" name="buttom" class="submit">Submit</buttom>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
</section>